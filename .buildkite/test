SCRIPT_PATH=$(dirname $(readlink -f ${BASH_SOURCE[0]}))

# Source standard environment
source $SCRIPT_PATH/environment.sh

# Error out on any error in the script, pipes etc.
set -euo pipefail

cd build
# Run tests
$MAKE -j$NPROC test
$MAKE integration-test
